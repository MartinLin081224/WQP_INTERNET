<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true" android:color="@color/windowBackgroundWhite">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="30dip" />
            <!--邊框-->
            <!--<stroke android:width="1dip" android:color="#5EB9D4" />-->
            <!--漸層顏色-->
            <gradient android:angle="0" android:startColor="#005D92" android:endColor="#5EB9D4"  />
        </shape>
    </item>

    <!-- 預設時 -->
    <item android:state_pressed="false" android:color="@color/colorLightBlue">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle"  >
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="30dip" />
            <!--邊框-->
            <stroke android:width="1dip" android:color="#5EB9D4" />
            <!--漸層顏色-->
            <!--<gradient android:angle="0" android:startColor="#10000000" android:endColor="#10000000"  />-->
        </shape>
    </item>

</selector>